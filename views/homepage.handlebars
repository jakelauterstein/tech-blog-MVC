{{#each posts as |post|}}
<div class="row">
    <div class="col s12 16">
        <div class="card">
            <div class="card-content">
           <article class="flow-text">
            <p class="title">
                <a href="/post/{{post.id}}" target="_blank">{{post.title}}</a>
                <span>({{post.content}})</span>
            </p>
            <div class="meta">
                <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
            </div>
            </article>
            </div>
        </div>
    </div>
    <div class="col s12 16">
    </div>
</div>
{{/each}}