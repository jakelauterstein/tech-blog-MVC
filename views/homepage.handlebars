<ol class="post-list">
      {{#each posts as |post|}}
  <li>
    <article class="post">
      <div class="title">
        <a href="/post/{{id}}" target="_blank">{{title}}</a>
        <span>({{content}})</span>
      </div>
      <div class="meta">
        by {{user.username}} on
        {{created_at}}
        
        <a href="/post/{{id}}">{{comments.length}} comment(s)</a>
      </div>
    </article>
  </li>
    {{/each}}
</ol>